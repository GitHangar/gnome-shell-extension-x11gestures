{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "extends": [
    "airbnb-base",
    "plugin:jsdoc/recommended"
  ],
  "plugins": [
    "jsdoc",
    "header"
  ],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "~",
            "./src"
          ]
        ],
        "extensions": [
          ".js",
          ".mjs",
          ".json"
        ]
      }
    }
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_init"
        ]
      }
    ],
    "jsdoc/require-hyphen-before-param-description": [
      "error",
      "never"
    ],
    "jsdoc/require-description-complete-sentence": "error",
    "header/header": [
      "error",
      "data/license-header.js"
    ]
  },
  "globals": {
    "log": "readonly",
    "logError": "readonly",
    "imports": "readonly",
    "pkg": "readonly",
    "_": "readonly",
    "window": "readonly",
    "globalThis": "readonly"
  }
}
